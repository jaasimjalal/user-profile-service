pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'user-profile-service:latest'
        CONTAINER_NAME = 'user-profile-service'
        BACKEND_DIR = 'backend'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building Docker image...'
                dir(env.BACKEND_DIR) {
                    sh 'docker build -t ${DOCKER_IMAGE} .'
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests...'
                sh '''
                docker run --rm ${DOCKER_IMAGE} npm test || echo "Tests completed (some may fail if DB not connected)"
                '''
            }
        }
        
        stage('Run') {
            steps {
                echo 'Starting container...'
                sh '''
                # Stop and remove existing container if running
                docker stop ${CONTAINER_NAME} || true
                docker rm ${CONTAINER_NAME} || true
                
                # Start new container
                docker run -d \
                  -p 3000:3000 \
                  --name ${CONTAINER_NAME} \
                  -e NODE_ENV=production \
                  -e PORT=3000 \
                  ${DOCKER_IMAGE}
                '''
                echo 'Service running on http://localhost:3000'
            }
        }
    }
    
    post {
        always {
            echo 'Cleaning up...'
            cleanWs()
        }
        success {
            echo 'Build successful!'
            echo 'Service available at: http://localhost:3000'
        }
        failure {
            echo 'Build failed!'
        }
    }
}